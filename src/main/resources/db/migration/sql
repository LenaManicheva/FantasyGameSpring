create table character (
                           id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
                           name varchar,
                           image_url varchar
);
create table usr (
                      id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY ,
                      username varchar,
                      password varchar,
                      character_id int references character (id) On DELETE set null,
                      level int,
                      points int
);

create table bot (
                      id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY ,
                      name varchar,
                      image_url varchar,
                      level int,
                      points int
);

